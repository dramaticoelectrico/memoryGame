{
    // Set the default
    "editor.formatOnSave": false,
    // Enable per-language
    "[javascript]": {
      "editor.formatOnSave": true
    },
    "[typescript]": {
      "editor.formatOnSave": true
    },
    "[css]": {
      "editor.formatOnSave": true
    },
    "[html]": {
      "editor.formatOnSave": true
    },
    "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.fixAll.eslint": false
    }
  }
  